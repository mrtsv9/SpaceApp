<resources>
    <!-- Base application theme. -->
    <style name="Theme.Space" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">#C4C4C4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rv_background</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.OnboardingDialog" parent="Theme.Space">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>